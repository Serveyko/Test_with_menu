        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:text="настройки по умолчанию"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:text="Сохранить настройки"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout >